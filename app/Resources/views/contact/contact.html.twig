{% extends "::pagelayout.html.twig" %}

{% block content %}
<div class="col-md-11 single">
    <div class="col-md-11 single-in">
        <div id="contact-form">
            <h3>Formulario de contacto</h3>
            <p>Déjanos tu mensaje y nos pondremos contigo en cuanto podamos. ¡Gracias!</p>
            {% set messages = app.session.flashbag.get('success') %}
            {% if messages|length > 0 %}
            <div class="flash-notice">
            {% for flashMessage in messages %}
                
                <p> {{ flashMessage }}</p>
               
            {% endfor %}
              </div>
            {% endif %}
            {{ form(form) }}
        </div>
    </div>
</div>
{% endblock %}
