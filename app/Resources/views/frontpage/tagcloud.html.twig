      <a class="url" href="{{ path( 'ez_legacy', { 'module_uri': '/tags/view/' ~ tag.tag|url_encode } ) }}">{{ tag.tag }}</a> ({{ tag.count }}){% if not loop.last %}, {% endif %}
{% endfor %}...
    </div>
</div>